<%- include('head') %>
    <div class="container">
        <h1><%= title %></h1>
        <p><%= message %></p>
        <table>
            <thead>
                <tr>
                    <th>Nombre del Producto</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < products.length; i++) { %>
                <tr>
                    <td><%= products[i].nombre %></td>
                    <td>$ <%= products[i].precio %></td>
                    <td><%= products[i].imagen %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <%- include('footer') %>
</body>
</html>